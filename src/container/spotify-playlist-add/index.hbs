<main class="main">
    {{#with data}}
    <div class="main__content">
        <h1 class="title title--center">Add Tracks to Playlist</h1>
        <form action="/spotify-playlist-add" method="POST">
            <ul class="track-list card">
                {{#each tracks}}
                <li class="track">
                    <img src="{{image}}" alt="{{name}}" class="choose__image">
                    <div class="track__content">
                        <strong class="track__name">{{name}}</strong>
                        <em class="track__author">{{author}}</em>
                    </div>
                    <a href="/spotify-playlist-add?playlistId={{../playlistId}}&trackId={{id}}">
                        <img src="img/png/add_tracks.png">
                        <img src="img/png/add_tracks1.png"></a>
                </li>
                {{/each}}
            </ul>
        </form>
    </div>
    {{/with}}
</main>